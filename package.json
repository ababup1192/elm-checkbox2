{
  "scripts": {
    "clean": "rimraf ./out",
    "watch:html": "cpx ./src/index.html ./out -w",
    "watch:assets": "cpx \"./src/assets/**/*\" ./out/assets -w",
    "watch:js": "cpx ./src/main.js ./out -w",
    "watch:elm": "elm-live ./src/Main.elm --open --start-page=index.html --dir=./out -- --output=./out/elm.js --debug",
    "watch:sass": "chokidar ./src/*.scss -c \"sass ./src/style.scss ./out/style.css --no-source-map\" --initial",
    "watch": "sass ./src/style.scss ./out/style.css --no-source-map && npm-run-all -p watch:*",
    "start": "npm-run-all -s clean watch",
    "test": "elm-test",
    "compile:html": "cpx ./src/index.html ./out",
    "compile:assets": "cpx \"./src/assets/**/*\" ./out/assets",
    "compile:js": "cpx ./src/main.js ./out",
    "compile:elm": "elm make ./src/Main.elm --optimize --output=./out/elm.optimized.js",
    "compile:sass": "sass ./src/style.scss ./out/style.css --no-source-map -s compressed",
    "compile": "npm-run-all -p compile:*",
    "minify:elm": "google-closure-compiler --js=./out/elm.optimized.js --js_output_file=./out/elm.js && rm ./out/elm.optimized.js",
    "build": "npm-run-all -s clean compile minify:elm"
  },
  "devDependencies": {
    "chokidar": "^3.0.2",
    "chokidar-cli": "^1.2.2",
    "cpx": "^1.5.0",
    "elm": "^0.19.0-no-deps",
    "elm-live": "3.4.0",
    "elm-test": "^0.19.0-rev6",
    "google-closure-compiler": "^20190528.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "sass": "^1.22.3"
  }
}
